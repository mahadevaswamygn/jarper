				<text><![CDATA[15.Remedies of the Company]]></text>
			</staticText>
			<staticText>
				<reportElement x="27" y="47" width="500" height="15" uuid="f22d2e6b-ef4b-45de-be24-1754be1cfaa4"/>
				<textElement textAlignment="Left" markup="html">
